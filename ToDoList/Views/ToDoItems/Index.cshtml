@model IEnumerable<ToDoList.Models.ToDoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<a type="button" class="btn btn-primary mb-2" asp-action="Index" asp-route-filter="To Do">To Do</a>
<a type="button" class="btn btn-success mb-2" asp-action="Index" asp-route-filter="Progress">In Progress</a>
<a type="button" class="btn btn-warning mb-2" asp-action="Index" asp-route-filter="Done">Done</a>
<a type="button" class="btn btn-info mb-2" asp-action="Index" asp-route-filter="All">Show All</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToDoStatus.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
